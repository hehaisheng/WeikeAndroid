<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300dp"
        android:orientation="vertical"
        android:background="@drawable/shape_dlg_bg"
        android:scrollbars="vertical" >

        <ImageView
            android:id="@+id/iv_dialog_apply_create_company_confirm_title_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_chenggong"
            />

        <TextView
            android:id="@+id/tv_dialog_apply_create_company_confirm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="提示"
            android:textColor="#323232"
            android:textSize="17sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dip"
            android:minHeight="30dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dialog_apply_create_company_confirm_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="登录令牌已过期"
                android:textColor="#808080"
                android:textSize="14sp" />

        </LinearLayout>


        <View

            android:id="@+id/view_dialog_apply_create_company_confirm_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dlg_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_dialog_apply_create_company_confirm_leftbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1"
                android:background="@drawable/left_btn"
                android:text="取消"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textColor="#4d4d4d"

                android:textSize="15sp"
                 />

            <View
                android:id="@+id/view_dialog_apply_create_company_confirm_line_2"
                android:visibility="gone"

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/btn_dialog_apply_create_company_confirm_rightbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_btn"
                android:text="确认"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textColor="#03A9F5"
                android:textSize="15sp"
                 />
        </LinearLayout>
    </LinearLayout>

</ScrollView>