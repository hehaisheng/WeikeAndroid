<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300dp"

        android:orientation="vertical"
        android:background="@drawable/shape_dlg_bg"
        android:scrollbars="vertical" >


        <TextView
            android:id="@+id/tv_include_inputext_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="提示"
            android:textColor="#323232"
            android:textSize="17sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dip"
            android:minHeight="30dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ed_input_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:hint="请输入"
                android:gravity="top"
                android:paddingTop="3dp"
                android:textSize="12sp"
                android:paddingLeft="3dp"
                android:background="@drawable/shape_gray"
                android:textColorHint="#CCCCCC"
                />

        </LinearLayout>

        <View
            android:id="@+id/view_dialog_apply_create_company_confirm_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dlg_bg"

            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_dialog_apply_create_company_confirm_leftbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_btn"
                android:text="取消"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#b3b3b3"
                android:textSize="15sp"
                />

            <View
                android:id="@+id/view_dialog_apply_create_company_confirm_line_2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/btn_dialog_apply_create_company_confirm_rightbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_btn"
                android:text="确认"
                android:gravity="center"
                android:textColor="#b3b3b3"
                android:textSize="15sp"
                />
        </LinearLayout>
    </LinearLayout>

