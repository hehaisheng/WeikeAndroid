<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_all_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/widget_action_bar"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">






    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"

        android:layout_weight="2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_client_option"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@color/color_all_bg"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/tv_add_client"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:text="添加客户 >"
            />

        <TextView
            android:id="@+id/tv_manager_label"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:text="管理标签 >"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_client_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/ll_nothing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_nothging_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="95dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_empty_label"
                />

            <TextView
                android:id="@+id/nothing_text"
                android:layout_width="wrap_content"
                android:layout_below="@+id/iv_nothging_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="行动从这里开始"
                android:textColor="@color/color_content"
                android:padding="5dp"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_add_newClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nothing_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:background="@drawable/shape_button_none_bg"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:textColor="@color/color_41BCF6"
                android:paddingBottom="5dp"
                android:text="新增客户"
                />
        </RelativeLayout>

    </FrameLayout>

    </LinearLayout>
</LinearLayout>
