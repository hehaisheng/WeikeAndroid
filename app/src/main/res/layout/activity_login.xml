<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <import type="android.view.View"></import>
        <variable
            name="loginVM"
            type="com.weike.data.business.login.LoginActVM"></variable>

    </data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.weike.data.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:scaleType="center"
            android:background="@mipmap/ic_login_logo"
            />

        <TextView
            android:layout_below="@+id/iv_login_logo"
            android:layout_alignRight="@+id/iv_login_logo"
            android:layout_alignLeft="@+id/iv_login_logo"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title_name"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textColor="@color/color_41BCF6"
            android:textStyle="bold
"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="手机号码"

            android:layout_marginLeft="20dp"
            />

        <EditText
            android:text="@={loginVM.phoneNum}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_touming"
            />
    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#b3b3b3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:minHeight="50dp"
            android:visibility="@{loginVM.isPwdLogin ? View.GONE:View.VISIBLE,default=gone}"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text="验证码" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="@={loginVM.smsCode}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_touming"
                 />
            <TextView


                android:text="获取验证码"
                android:gravity="center"

                android:onClick="@{() -> loginVM.getVerificationCode()}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:minHeight="50dp"
            android:visibility="@{loginVM.isPwdLogin ? View.VISIBLE:View.GONE}"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text="密码" />

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="@={loginVM.pwd}"
                android:layout_height="match_parent"
                android:background="@color/color_touming"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_login_logo"

                />
        </LinearLayout>

        <View
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b3b3b3"
            android:layout_marginTop="10dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{loginVM.typeText    }"
            android:onClick="@{() -> loginVM.switchLoginType()}"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"



            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="登录"

        android:textColor="@color/color_white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="@{() -> loginVM.login()}"
        android:background="@drawable/login_button"

        />


</LinearLayout>
</layout>