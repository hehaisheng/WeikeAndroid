<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_all_bg"
    android:orientation="vertical">

    <include layout="@layout/widget_action_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smartrefreshlayout"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_above="@+id/layout_moidfy_msg"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            </android.support.v7.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_moidfy_msg"
            android:layout_width="match_parent"
            android:background="@color/color_white"
            android:minHeight="44dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_all_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textSize="12sp"
                android:padding="20dp"
                android:text="全部处理"
                android:textColor="@color/color_41BCF6" />

            <TextView
                android:id="@+id/tv_delete_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="20dp"
                android:textSize="12sp"
                android:text="删除"
                android:textColor="@color/color_41BCF6" />
        </LinearLayout>


    </RelativeLayout>




</LinearLayout>

