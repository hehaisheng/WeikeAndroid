<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@color/color_white">

   <LinearLayout
       android:id="@+id/ll_goto_add_client"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_client_list_add"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="新增客户"
           android:layout_marginTop="15dp"
           android:textColor="@color/color_content"
           android:layout_marginLeft="10dp"
           android:layout_marginBottom="15dp"
           />

   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        />

    <LinearLayout
        android:id="@+id/ll_goto_client_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_client_list_tag"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户标签"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        />

    <LinearLayout
        android:id="@+id/ll_goto_add_for_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_client_list_phone"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从通讯录导入"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        />
    <TextView
        android:id="@+id/tv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_main_page_search"
        android:gravity="center|left"
        android:drawableLeft="@mipmap/ic_main_search"
        android:minHeight="40dp"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:text="搜索客户"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_bebebe" />


</LinearLayout>